<form method="post">
    <div class="form-group has-success">

        <label for="example-text-input text-success" class="col-12 col-form-label ">
            <h3 class="text-danger ml-4">Edit Country</h3>
        </label>

          <label for="example-text-input text-success " class="col-12 col-form-label">
            <h4 class="text-primary pl-2">Country:</h4>
          </label>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="text" name="countryName" id="example-text-input" value="{{singleCountry.countryName}}">
        </div>

         <label for="example-text-input text-success " class="col-12 col-form-label">
            <h4 class="text-primary pl-2">Country Symbol:</h4>
        </label>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="text" name="countrySymbol" id="example-text-input" value="{{singleCountry.countrySymbol}}">
        </div>

        <label for="example-text-input text-success " class="col-12 col-form-label">
            <h4 class="text-primary pl-2">Order:</h4>
        </label>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 ">
            <input class="form-control" type="number" name="order" id="example-text-input" value="{{singleCountry.order}}">
        </div>

        <div class="col-lg-6 col-md-8 col-sm-9 col-xs-9 mt-3 ">
          <input class="btn btn-success btn-lg" type="submit" value="Submit">
        </div>

    </div>
</form>